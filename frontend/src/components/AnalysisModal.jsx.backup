              ) : (
                <div className="p-2 sm:p-3 bg-orange-500 rounded-full">
                  <AlertTriangle className="w-5 h-5 sm:w-6 sm:h-6 text-white" />
                </div>
              )}
              <div className="flex-1">
                <h3 className="text-lg sm:text-xl font-black text-gray-900 dark:text-white">
                  {confidence >= 4 ? 'üî• FORTE!' : confidence >= 3 ? '‚öñÔ∏è EQUILIBRADO' : '‚ö†Ô∏è CAUTELA'}
                </h3>
                <p className="text-xs sm:text-sm font-semibold text-gray-700 dark:text-gray-200">
                  {confidence >= 4
                    ? 'Aposte com confian√ßa'
                    : confidence >= 3
                    ? 'An√°lise moderada'
                    : 'Risco elevado'}
                </p>
              </div>
            </div>
          </div>

          {isSimpleAnalysis ? (
            /* An√°lise simples (quick_analyze) - MELHORADO */
            <div className="space-y-4">
              {/* Pontos-Chave Inteligentes */}
              <div className="bg-gradient-to-br from-white to-gray-50 dark:from-gray-800 dark:to-gray-700 rounded-2xl sm:rounded-3xl p-4 sm:p-6 border-2 border-gray-200 dark:border-gray-600 shadow-lg">
                <div className="flex items-center gap-2 mb-4">
                  <Zap className="w-5 h-5 sm:w-6 sm:h-6 text-yellow-500" />
                  <h3 className="text-lg sm:text-xl font-black text-gray-900 dark:text-white">PONTOS-CHAVE</h3>
                </div>
                <div className="space-y-3">
                  {extractKeyPoints(analysisText).map((point, idx) => (
                    <div 
                      key={idx} 
                      className="flex items-start gap-3 p-3 sm:p-4 bg-white dark:bg-gray-800 rounded-xl sm:rounded-2xl border-l-4 border-primary-500 shadow-md hover:shadow-lg transition-all animate-fade-in"
                      style={{ animationDelay: `${idx * 0.1}s` }}
                    >
                      <div className="p-2 bg-primary-100 dark:bg-primary-900/30 rounded-lg">
