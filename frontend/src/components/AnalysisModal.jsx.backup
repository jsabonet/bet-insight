import { X, Star, Sparkles, TrendingUp, AlertCircle, Target, Brain, Trophy, Shield, Zap, CheckCircle2, AlertTriangle, BarChart3, Activity, Clock, MapPin } from 'lucide-react';
import { useAuth } from '../context/AuthContext';
import { TeamLogo } from '../utils/logos';

export default function AnalysisModal({ match, analysis, onClose, metadata }) {
  const { user } = useAuth();

  if (!analysis) return null;

  // Detectar tipo de an√°lise: string (quick_analyze) ou objeto estruturado (request_analysis)
  const isSimpleAnalysis = typeof analysis === 'string' || (analysis.analysis && !analysis.prediction_display);
  const analysisText = typeof analysis === 'string' ? analysis : analysis.analysis;
  const confidence = typeof analysis === 'string' ? 3 : (analysis.confidence || 3);

  // Extrair pontos-chave de forma inteligente
  const extractKeyPoints = (text) => {
    if (!text) return [];
    
    // Palavras-chave importantes
    const keywords = ['recomendo', 'importante', 'destaque', 'aten√ß√£o', 'crucial', 'fundamental', 'decisivo', 'vantagem', 'favorito'];
    
    const sentences = text
      .split(/[.!?]+/)
      .map(s => s.trim())
      .filter(s => s.length > 20);
    
    // Pontuar cada frase
    const scored = sentences.map(sentence => {
      let score = 0;
      const lower = sentence.toLowerCase();
      
      // Cont√©m palavra-chave? +3 pontos
      if (keywords.some(kw => lower.includes(kw))) score += 3;
      
      // Cont√©m n√∫meros/percentuais? +2 pontos
      if (/\d+%|\d+\.\d+|\d+ gol/.test(sentence)) score += 2;
      
      // Come√ßa com marcador? +2 pontos
      if (/^[‚Ä¢\-\d+]/.test(sentence.trim())) score += 2;
      
      // Cont√©m emoji de an√°lise? +1 ponto
      if (/[üî•‚ö°‚≠êüí™üéØ]/.test(sentence)) score += 1;
      
      // Frases introdut√≥rias gen√©ricas? -2 pontos
      if (/^(boas|como|vamos|ol√°)/i.test(sentence)) score -= 2;
      
      return { sentence, score };
    });
    
    // Ordenar por pontua√ß√£o e pegar top 3
    return scored
      .sort((a, b) => b.score - a.score)
      .slice(0, 3)
      .map(item => item.sentence);
  };

  // Formatar texto da an√°lise com se√ß√µes
  const formatAnalysisText = (text) => {
    if (!text) return [];
    
    const sections = [];
    const lines = text.split('\n');
    let currentSection = null;
    
    lines.forEach(line => {
      const trimmed = line.trim();
      if (!trimmed) return;
      
      // Detectar t√≠tulos de se√ß√£o
      if (/^[‚ïê]+$/.test(trimmed)) return; // Pular separadores
      
      if (/^(1Ô∏è‚É£|2Ô∏è‚É£|3Ô∏è‚É£|4Ô∏è‚É£|5Ô∏è‚É£|üìä|‚öΩ|üéØ|‚ö†Ô∏è|üí°)/.test(trimmed) || /^\*\*[A-Z\s]+\*\*/.test(trimmed)) {
        // Nova se√ß√£o
        if (currentSection) sections.push(currentSection);
        currentSection = {
          title: trimmed.replace(/\*\*/g, '').trim(),
          content: [],
          isTitle: true
        };
      } else if (currentSection) {
        currentSection.content.push(trimmed);
      } else {
        // Texto inicial sem se√ß√£o
        sections.push({
          title: null,
          content: [trimmed],
          isTitle: false
        });
      }
    });
    
    if (currentSection) sections.push(currentSection);
    return sections;
  };

  const renderStars = (confidence) => {
    return (
      <div className="flex items-center gap-1">
        {[...Array(5)].map((_, i) => (
          <Star
            key={i}
            className={`w-5 h-5 ${
